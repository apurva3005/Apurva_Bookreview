<% include ../partials/header %>

<br>
<h1 style="text-align: center">Edit <%= book.name %>'s Review</h1>
<form class="ui form" action="/books/<%= book._id %>?_method=PUT" method="POST">
    <div class="field">
        <label>Book Image</label>
        <input type="text" placeholder="Image" name="book[image]" value="<%= book.image %>">
    </div>
    <div class="field">
            <label>Review</label>
            <textarea name="book[review]"><%= book.review %></textarea>
    </div>
    <button class="ui button" type="submit">Submit</button>
</form>

<% include ../partials/footer %>