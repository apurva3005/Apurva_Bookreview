<% include ../partials/header %>

<br>
<h2 style="text-align: center">Add a comment to <%= book.name %>'s review</h2>
<form class="ui form" action="/books/<%= book._id %>/comments/create" method="POST">
    <div class="field">
        <label>Comment</label>
        <input type="text" name="comment[content]" required>
    </div>
    <button class="ui button" type="submit">Submit</button>
</form>

